					.form-input
						.article-title-b-form
							h2 Đăng ký nhận thông tin
								span.blue-line-short
						.wrap-form
							.row
								.form-group.col-12
									label Họ và tên
									input.form-control(type='text')
								.form-group.col-12
									label Email
									input.form-control(type='text')
								.form-group.col-12
									label Số điện thoại
									input.form-control(type='text')
								.form-group.col-12
									label Nội dung
									textarea#inpputTextArea.form-control(rows='3')
							.frm-btnwrap
								.frm-btn
									input(type="submit" value ="Gửi")

